<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>

    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if @user == current_user %>
    <p><%= link_to "User info", edit_user_path %></p>
  <% end %>
</div>